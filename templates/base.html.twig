<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <title>
            {% block title %}
                Sortir.com
            {% endblock %}</title>
        <link rel="stylesheet" href="{{ asset('css/normalizer.css') }}">
        <link rel="stylesheet" href="{{ asset('css/style.css') }}">
    </head>
    <body>
        <div class="container">
            <header class="header">
                <div class="header__container">
                    <div class="header__logo">
                        <a class="header__link" href="{{ path('main_index') }}">
                            <img class="header__img" src="#" alt="Logo">
                            <h1 class="header__sigle">Sortir.com</h1>
                        </a>
                    </div>
                    {% if app.user %}
                        <nav class="nav">
                            <ul class="nav__list">
                                <li class="nav__item">
                                    <a href="{{ path('user_profil') }}">Mon Profil</a>
                                </li>
                                <li class="nav__item">
                                    <a class="nav__link" href="{{ path('app_logout') }}">Se d√©connecter</a>
                                </li>
                            </ul>
                        </nav>
                    {% endif %}
                    {% if not app.user %}
                        <nav class="nav">
                            <ul class="nav__list">
                                <li class="nav__item">
                                    <i class="fa-solid fa-arrow-right-to-bracket"></i>
                                    <a class="nav__link" href="{{ path('app_login') }}">Se connecter</a>
                                </li>
                                <li class="nav__item">
                                    <i class="fa-solid fa-id-badge"></i>
                                    <a href="{{ path('app_register') }}">S'enregistrer</a>
                                </li>
                            </ul>
                        </nav>
                    {% endif %}
                </div>
            </header>
            <main class="main">
                {% block body %}
                {% endblock %}
            </main>
            <footer class="footer">
                {% block footer %}
                {% endblock %}
            </footer>
        </div>
        <script src="https://kit.fontawesome.com/2795f9a1d5.js" crossorigin="anonymous"></script>
    </body>
</html>
