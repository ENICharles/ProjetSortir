<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <title>
            {% block title %}
                Sortir.com
            {% endblock %}</title>

        <link rel="stylesheet" href="{{ asset('css/normalizer.css') }}">
        <link rel="stylesheet" href="{{ asset('css/style.css') }}">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Andada+Pro&display=swap" rel="stylesheet">
        <script src="{{ asset('js/script.js') }}"></script>

    </head>
    <body>
        <div class="container">
            <header class="header">
                <div class="header__container">
                    <div class="header__logo">
                        <a class="header__link" href="{{ path('main_index') }}">
                            <img class="header__img" src="#" alt="Logo">
                            <h1 class="header__sigle">Sortir.com</h1>
                        </a>
                    </div>
                    {% if app.user %}
                        <nav>
                            <label class="nav_menu" href="#">
                                <i class="fa-solid fa-bars"></i>
                            </label>
                            <ul class="nav__list">
                                <li class="nav__item">
                                    <a class="nav__link" href="{{ path('event_create',{'id': app.user.id}) }}">Créer une sortie</a>
                                </li>
                                <li class="nav__item">
                                    <a class="nav__link" href="{{ path('user_profil') }}">Mon Profil</a>
                                </li>
                                <li class="nav__item">
                                    <a class="nav__link" href="{{ path('app_logout') }}">Se déconnecter</a>
                                </li>
                            </ul>
                        </nav>
                    {% endif %}
                    {% if not app.user %}
                        <nav class="nav">
                            <ul class="nav__list">
                                <li class="nav__item">
                                    <a class="nav__link" href="{{ path('app_login') }}">
                                        <i class="fa-solid fa-arrow-right-to-bracket"></i>
                                        Se connecter
                                    </a>
                                </li>
                                <li class="nav__item">
                                    <a href="{{ path('app_register') }}">
                                        <i class="fa-solid fa-id-badge"></i>
                                        S'enregistrer
                                    </a>
                                </li>
                            </ul>
                        </nav>
                    {% endif %}
                </div>
            </header>
            <main class="main">
                {% block body %}
                {% endblock %}

                {% block event %}
                {% endblock %}
            </main>
            <footer class="footer">
                {% block footer %}
                {% endblock %}
            </footer>
        </div>
        <script src="https://kit.fontawesome.com/2795f9a1d5.js" crossorigin="anonymous"></script>
    </body>
</html>
