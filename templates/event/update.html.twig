{% extends 'base.html.twig' %}
{% block title %}
  {{ parent() }} | Créer une sortie
{% endblock %}

{% block body %}
<div class="main__create">
  <h2>Créer une nouvelle sortie</h2>
  {% for message in app.flashes('date_error') %}
  <div class="alert alert-success">
      {{ message }}
  </div>
  {% endfor %}
  {{ form_start(eventForm) }}
  {{ form_widget(eventForm) }}
  <div id="info_lieu"></div>
  <button>Enregistrer</button>
  <a class="form__button" href="{{ path('localisation_new') }}">Créer nouveau lieu</a>
  {{ form_end(eventForm) }}
  <a href="{{ path('main_index') }}"><button>Annuler</button></a>
</div>
{% endblock %}



