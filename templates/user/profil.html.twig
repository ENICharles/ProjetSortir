{% extends 'base.html.twig' %}

{% block header %}
    <div class="header__container">
        <div class="header__logo">
            <a class="header__link" href="{{ path('main_index') }}">
                <img class="header__img" src="{{ asset('img/logo_sortir.png') }}" alt="Logo">
            </a>
        </div>
        <nav>
            <label class="nav_menu" href="#">
                <i class="fa-solid fa-bars"></i>
            </label>
            <ul class="nav__list">
                <li class="nav__item">
                    <a class="nav__link" href="{{ path('event_create') }}">Créer une sortie</a>
                </li>
                <li class="nav__item">
                    <a class="nav__link" href="{{ path('user_profil') }}">Mon Profil</a>
                </li>
                <li class="nav__item">
                    {% if is_granted('ROLE_ADMIN') %}
                        <a class="nav__link" href="{{ path('app_register') }}">
                            <i class="fa-solid fa-id-badge"></i>
                            Créer un utilisateur
                        </a>
                    {% endif %}
                </li>
                <li class="nav__item">
                    <a class="nav__link" href="{{ path('app_logout') }}">Se déconnecter</a>
                </li>
            </ul>
        </nav>
    </div>
{% endblock %}

{% block body %}

<div class="user_main border">
    {% for message in app.flashes('error_pseudo') %}
        <div class="alert alert-erreur">
            {{ message }}
        </div>
    {% endfor %}
    <h1 class="user_h1">Mon profil</h1>
    <img class="img_profil" src="{{ asset('img/profil.png') }}" alt="photo de profil">
    <div class="user_form">
        {{ form_start(userForm) }}
        {{ form_widget(userForm) }}
        <button class="user_button">Enregistrer</button>
        {{ form_end(userForm) }}
        <a href="{{ path('main_index') }}"><button class="user_button">Annuler</button></a>
    </div>
</div>

{% endblock %}

{% block title %}

{% endblock %}

